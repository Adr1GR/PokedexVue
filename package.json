{
  "name": "pokedexvue",
  "private": true,
  "version": "0.0.1",
  "description": "Pokedex de escritorio en Vue + Electron",
  "author": "Adri√°n <adriangelmotto@gmail.com>",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build:web": "vite build",
    "build:electron": "electron-builder -l AppImage",
    "build": "npm run build:web && electron-builder -l AppImage",
    "android:build": "npm run build:web && npx cap add android && npx cap copy android && npx cap open android",
    "android:sync": "npm run build:web && npx cap copy android",
    "android:open": "npx cap open android"
  },
  "build": {
    "appId": "com.adr1gr.pokedexvue",
    "productName": "PokedexVue",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "electron/**"
    ],
    "asar": true,
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "bootstrap": "^5.3.8",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
