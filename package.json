{
  "name": "pokedexvue",
  "productName": "Pokedex Vue",
  "private": true,
  "version": "0.0.4",
  "description": "A practice Vue project",
  "author": "Adri√°n <adriangelmotto@gmail.com>",
  "type": "module",
  "main": "src/electron/main.js",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build:web": "vite build",
    "build:electron": "vite build && electron-builder -l AppImage",
    "build": "npm run build:web && electron-builder -l AppImage",
    "android:build": "npm run build:web && npx cap add android && npx cap copy android && npx cap open android",
    "android:sync": "npm run build:web && npx cap copy android",
    "android:open": "npx cap open android"
  },
  "build": {
    "appId": "com.adr1gr.pokedexvue",
    "productName": "PokedexVue",
    "icon": "build/pokedexvue.png",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "src/electron/**"
    ],
    "asar": true,
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.1.0",
    "@capacitor/core": "^7.4.3",
    "@tailwindcss/vite": "^4.1.14",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "tailwindcss": "^4.1.14",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "sass-embedded": "^1.93.2",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
